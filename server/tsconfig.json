{
  "compilerOptions": {
    "target": "es2020",
    "module": "ESNext",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "lib": ["ES2018", "DOM"],
    "moduleResolution": "node",
    "outDir": "build",
    "sourceMap": true,
    "baseUrl": ".",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"],
      "@/config/*": ["config/*"]
    }
  },
  "include": ["index.ts", "**/*.ts"],
  "exclude": ["node_modules", "build"]
}